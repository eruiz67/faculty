<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="course_global_score_wizard_form_view" model="ir.ui.view">
      <field name="name">course_global_score_wizard.view.form</field>
      <field name="model">faculty.course_global_score_wizard</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="course_id" />
                    <field name="student_id" invisible="1"/>
                    <field name="course_ids" invisible="1"/>
                </group>
                <group>
                   <field name="mark" />
                </group>
            </group>

            <footer>
                <button type="object" name="action_set_mark"
                    string="Evaluar" class="oe_highlight"/>
                <button special="cancel" string="Cancelar"/>
            </footer>
        </form>
      </field >
        </record>

</odoo>